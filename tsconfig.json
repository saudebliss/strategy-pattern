{
  "include": ["./src/**/*"],
  // "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "allowJs": true,
    "types": ["node", "jest"],
    "typeRoots": ["../node_modules/@types"],
    "outDir": ".build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true
  }
}
